@model Entities.Product

<div class="page-header">
    <h2>Product</h2>
</div>

@using (Html.BeginForm("CUD", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <h4 class="col-sm-2 control-label">ID:</h4>
        <div class="col-sm-10">@Html.TextBoxFor(p => p.ProductID, new { @class = "form-control" })</div>
    </div>
    <div class="form-group">
        <h4 class="col-sm-2 control-label">Name:</h4>
        <div class="col-sm-10">@Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })</div>
    </div>
    <div class="form-group">
        <h4 class="col-sm-2 control-label">Unit Price:</h4>
        <div class="col-sm-10">@Html.TextBoxFor(p => p.UnitPrice, new { @class = "form-control" })</div>
    </div>
    <div class="form-group">
        <h4 class="col-sm-2 control-label">Units in Stock:</h4>
        <div class="col-sm-10">@Html.TextBoxFor(p => p.UnitsInStock, new { @class = "form-control" })</div>
    </div>
    <div class="form-group">
        <h4 class="col-sm-2 control-label">Category:</h4>
        <div class="col-sm-10">@Html.TextBoxFor(p => p.CategoryID, new { @class = "form-control" })</div>
    </div>
    <div class="form-group">
        <input type="submit" name="btnCreate" class="btn btn-primary" value="Create" />
        <input type="submit" name="btnUpdate" class="btn btn-warning" value="Update" />
        <input type="submit" name="btnDelete" class="btn btn-danger" value="Delete" />
    </div>
}